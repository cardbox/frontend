{
  "name": "razzle-examples-with-typescript",
  "version": "3.3.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js",
    "format": "prettier --write \"./src/**/**.{ts,tsx,js,jsx,json}\"",
    "commit": "git-cz",
    "lint": "eslint --fix \"./src/**/**.{ts,tsx,js,jsx,json}\""
  },
  "dependencies": {
    "@cardbox/editor": "^0.1.4",
    "@effector/reflect": "^0.6.0",
    "@tippyjs/react": "^4.2.5",
    "cookie-parser": "^1.4.5",
    "cross-fetch": "^3.0.4",
    "dayjs": "^1.10.5",
    "dotenv": "^8.2.0",
    "effector": "^21.2.2",
    "effector-inspector": "^0.4.2",
    "effector-logger": "^0.9.0",
    "effector-react": "^21.0.4",
    "effector-root": "^1.1.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.5",
    "miragejs": "^0.1.41",
    "node-fetch": "^2.6.1",
    "patronum": "^1.1.0",
    "query-string": "^6.13.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet-async": "^1.0.6",
    "react-is": "^16.13.1",
    "react-router": "^5.2.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.0.1",
    "react-tabs": "^3.2.2",
    "styled-components": "^5.1.1",
    "through": "^2.3.8",
    "tippy.js": "^6.3.1",
    "use-query-params": "^1.2.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-export-namespace-from": "^7.14.5",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@eslint-kit/eslint-config-base": "^2.1.0",
    "@eslint-kit/eslint-config-node": "^2.0.0",
    "@eslint-kit/eslint-config-prettier": "^2.0.0",
    "@eslint-kit/eslint-config-react": "^2.0.0",
    "@eslint-kit/eslint-config-typescript": "^2.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.0",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-router": "^5.1.12",
    "@types/react-router-config": "^5.0.2",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-tabs": "^2.3.2",
    "@types/styled-components": "^5.1.1",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-plugin-styled-components": "^1.10.7",
    "commitizen": "4.0.3",
    "commitlint-config-cz": "^0.13.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "3.0.2",
    "cz-customizable": "^6.2.1",
    "eslint": "6.8.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "glob": "^7.1.6",
    "husky": "^3.1.0",
    "import-sort-style-eslint": "^6.0.0",
    "import-sort-style-sova": "^0.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^9.5.0",
    "prettier": "^2.0.5",
    "prettier-plugin-import-sort": "^0.0.4",
    "razzle": "^3.1.5",
    "razzle-plugin-typescript": "^3.1.5",
    "ts-jest": "^26.1.1",
    "typescript": "^4.2.3",
    "typescript-plugin-styled-components": "^1.4.4"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": ["ts", "tsx", "js", "json"],
    "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"],
    "moduleNameMapper": {
      "^@box/(.*)$": "<rootDir>/src/$1"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "importSort": {
    ".tsx, .ts": {
      "style": "sova",
      "parser": "typescript"
    },
    ".js": {
      "style": "sova"
    }
  }
}
